# API Keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
LANGCHAIN_API_KEY=lsv2_pt_your-langchain-api-key-here  # Optional: For LangSmith tracing/observability

# Agent Instance Configuration
# These control how agents register themselves and communicate
AGENT_HOSTNAME=demo-agent  # Container DNS name (defaults to agent name from --agent-name)
MCP_INTERNAL_PORT=8000     # Internal container port for MCP server (defaults to 8000)
HEARTBEAT_INTERVAL_SECONDS=900  # How often agents update their heartbeat (defaults to 900 = 15 minutes)

# MCP Server Configuration
MCP_LOG_LEVEL=INFO

# PostgreSQL Connection (for postgres config source)
POSTGRES_DSN=postgresql://agent_admin:agent_admin_pw_dev_only@agent-postgres:5432/agent_control_plane

# Agent Configuration Source
SOURCE_TYPE=postgres  # Options: filesystem, postgres
AGENT_NAME=demo-agent  # Required when using postgres source type
